generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  hash String
  name  String?
  role String? @default("Member")
  createAt DateTime @default(now()) @map("created_at")
  updated DateTime @default(now()) @updatedAt @map("updated_at")
}

model Task {
  id    String     @id @default(auto()) @map("_id") @db.ObjectId
  createAt DateTime @default(now()) @map("created_at")
  updated DateTime @default(now()) @updatedAt @map("updated_at")
  title String
  description String
  isDone Boolean @default(false)
}